<% if @mircopost.comment.count > 0 %>
<div class="comments-list">
<ul>
    <% @mircopost.comment.each do |comment| %>
      <li class="list-item">
        <div><%= comment.content %></div>
        <div class="info">
        <span class="user"><%= format_time comment.user.name %></span> | <span class="time"><%= format_time comment.created_at %></span>
        </div>
      </li>
  	<% end %>

</ul>
</div>
<% end %>
